<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Subscribers</title>
  <style>
    body { font-family: sans-serif; max-width: 900px; margin: 2rem auto; padding: 0 1rem; }
    .actions { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem; }
    .btn { padding: 0.6rem 1rem; border: none; border-radius: 4px; cursor: pointer; }
    .message { color: #28a745; margin-bottom: 1rem; }
    table { width: 100%; border-collapse: collapse; }
    th, td { border: 1px solid #ddd; padding: 0.5rem; text-align: left; }
    th { background: #f7f7f7; }
  </style>
  </head>
<body>
  <h1>Subscribers</h1>

  <div class="actions">
    <a href="/" class="btn">Home</a>
    <a href="/classes" class="btn">Classes</a>
  </div>

  <% if (message) { %>
    <div class="message"><%= message %></div>
  <% } %>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Joined</th>
      </tr>
    </thead>
    <tbody>
      <% if (subscribers.length === 0) { %>
        <tr><td colspan="3">No subscribers yet.</td></tr>
      <% } %>
      <% subscribers.forEach(s => { %>
        <tr>
          <td><%= s.name %></td>
          <td><%= s.email %></td>
          <td><%= s.joinedAt %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
