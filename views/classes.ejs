<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Classes Management</title>
  <style>
    body { font-family: sans-serif; max-width: 900px; margin: 2rem auto; padding: 0 1rem; }
    .actions { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem; }
    .btn { padding: 0.6rem 1rem; border: none; border-radius: 4px; cursor: pointer; }
    .btn-primary { background-color: #007bff; color: white; }
    .btn-primary:hover { background-color: #0056b3; }
    .message { color: #28a745; margin-bottom: 1rem; }
    table { width: 100%; border-collapse: collapse; }
    th, td { border: 1px solid #ddd; padding: 0.5rem; text-align: left; }
    th { background: #f7f7f7; }
  </style>
</head>
<body>
  <h1>Classes</h1>

  <div class="actions">
    <a href="/" class="btn">Home</a>
    <a href="/classes/new" class="btn btn-primary">Add New Class</a>
  </div>

  <% if (message) { %>
    <div class="message"><%= message %></div>
  <% } %>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Instructor</th>
        <th>Level</th>
        <th>Date</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
      <% if (classes.length === 0) { %>
        <tr><td colspan="5">No classes yet.</td></tr>
      <% } %>
      <% classes.forEach(c => { %>
        <tr>
          <td><%= c.name %></td>
          <td><%= c.instructor %></td>
          <td><%= c.level %></td>
          <td><%= c.date %></td>
          <td><%= c.time %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
